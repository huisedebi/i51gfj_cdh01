<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_6dp"
        android:background="@color/line2">
    </View>
    <LinearLayout
        android:id="@+id/lyout_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_50dp"
        android:orientation="horizontal"
        >

<ImageView
    android:layout_width="@dimen/margin_size_20dp"
    android:layout_height="@dimen/margin_size_20dp"
    android:src="@drawable/store_two"
    android:layout_margin="@dimen/margin_size_15dp"
    />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="翔安新黄石家政"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/font_size_17sp"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="@dimen/margin_size_10dp"
            android:layout_height="@dimen/margin_size_20dp"
            android:src="@drawable/right"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_size_15dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:background="@color/line2"
        android:layout_marginLeft="@dimen/margin_size_15dp"
        android:layout_marginRight="@dimen/margin_size_15dp"
        >
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_40dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/margin_size_12dp"
            android:layout_height="@dimen/margin_size_12dp"
            android:src="@drawable/index_good"
            android:layout_margin="@dimen/margin_size_15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐度"
            android:layout_marginTop="@dimen/margin_size_15dp"
            />
            <ImageView
                android:id="@+id/start"
                android:layout_width="@dimen/margin_size_65dp"
                android:layout_height="@dimen/margin_size_15dp"
                android:src="@drawable/star5"
              android:layout_marginTop="@dimen/margin_size_15dp"
                android:layout_marginLeft="@dimen/margin_size_10dp"
                />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="08-03 | 2016"
            android:gravity="right"
            android:layout_marginRight="@dimen/margin_size_15dp"
            android:layout_marginTop="@dimen/margin_size_15dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="效果不错，物美价廉。售后服务很到位"
        android:paddingLeft="@dimen/margin_size_15dp"
        android:paddingBottom="@dimen/margin_size_10dp"
        />

</LinearLayout>