<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/top_bar"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_12dp"
        android:background="@color/line2"></View>

    <LinearLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_55dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_size_15dp"
            android:gravity="center_vertical"
            android:text="姓名" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_size_8dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="请输入姓名"
            android:textColorHint="@color/line4"
            android:textSize="@dimen/margin_size_15dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:layout_marginLeft="@dimen/margin_size_15dp"
        android:background="@color/line2"></View>

    <LinearLayout
        android:id="@+id/layout_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_55dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_size_15dp"
            android:gravity="center_vertical"
            android:text="手机号" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_size_8dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="请输入手机号"
            android:textColorHint="@color/line4"
            android:textSize="@dimen/margin_size_15dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:layout_marginLeft="@dimen/margin_size_15dp"
        android:background="@color/line2"></View>

    <LinearLayout
        android:id="@+id/layout_opinion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_120dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_size_15dp"
            android:layout_marginTop="@dimen/margin_size_15dp"
            android:text="留言" />

        <EditText
            android:id="@+id/et_opinion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_size_8dp"
            android:layout_marginTop="@dimen/margin_size_15dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入你的留言"
            android:textColorHint="@color/line4"
            android:textSize="@dimen/margin_size_15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="1"
        android:background="@color/line2">

        <Button
            android:id="@+id/btn_updata"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_45dp"
            android:layout_marginLeft="@dimen/margin_size_25dp"
            android:layout_marginRight="@dimen/margin_size_25dp"
            android:layout_marginTop="@dimen/margin_size_35dp"
            android:background="@drawable/corner_white_5dp_red"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white" />


    </LinearLayout>

</LinearLayout>