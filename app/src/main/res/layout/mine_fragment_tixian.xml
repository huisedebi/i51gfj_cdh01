<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/top_bar"></include>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_15dp"
            android:background="@color/line2"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_size_10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:layout_weight="1"
            />
        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入收款人姓名"
            android:textSize="@dimen/font_size_15sp"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:textColorHint="@color/line4"
            />
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:background="@color/line2"
        android:layout_marginLeft="@dimen/margin_size_10dp"></View>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:background="@color/line2"
        android:layout_marginLeft="@dimen/margin_size_10dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_size_10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现方式"
            android:layout_weight="1"
            android:textSize="@dimen/font_size_15sp"
            />
        <TextView
            android:textColorHint="@color/line4"
            android:gravity="center_vertical|right"
            android:hint="请选择银行"
            android:id="@+id/tv_bank"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="@dimen/margin_size_15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_size_10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="对应的帐号"
            android:layout_weight="1"
            />
        <EditText
            android:id="@+id/userAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入收款人账号"
            android:textSize="@dimen/font_size_15sp"
            android:background="@null"
            android:inputType="number"
            android:gravity="center_vertical|right"
            android:textColorHint="@color/line4"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_10dp"
        android:background="@color/line2"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_size_10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额"
            />
        <EditText
            android:id="@+id/et_money"
            android:layout_marginLeft="@dimen/margin_size_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入提现金额"
            android:textSize="@dimen/font_size_15sp"
            android:background="@null"
            android:inputType="numberDecimal"
            android:layout_weight="1"
            android:textColorHint="@color/line4"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:background="@color/line2"
        android:layout_marginLeft="@dimen/margin_size_10dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="验证码"
            android:padding="@dimen/margin_size_10dp"
            />
        <EditText
            android:id="@+id/et_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入验证码"
            android:textSize="@dimen/font_size_15sp"
            android:textColorHint="@color/line4"
            android:background="@null"
            />
        <Button
            android:id="@+id/btn_code"
            android:layout_width="@dimen/margin_size_120dp"
            android:layout_height="@dimen/margin_size_40dp"
            android:text="点击发送验证码"
            android:textSize="@dimen/font_size_13sp"
            android:background="@color/index_main"
            android:textColor="@color/white"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_20dp"
        android:orientation="vertical"
        android:background="@color/line1"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_amount"
            android:padding="@dimen/margin_size_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="当前可体现额度为001大大方方方式方法所发生的"
            android:textSize="@dimen/font_size_15sp"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/bt_upload"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_35dp"
            android:layout_marginLeft="@dimen/margin_size_25dp"
            android:layout_marginRight="@dimen/margin_size_25dp"
            android:background="@drawable/corner_white_5dp_red"
            android:layout_marginTop="@dimen/margin_size_10dp"
            android:text="提现"
            android:textColor="@color/white" />
    </LinearLayout>
    </LinearLayout>

