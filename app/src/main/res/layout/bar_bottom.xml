<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/buttom_bar">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:background="@color/line2"
        >

    </View>

    <LinearLayout
        android:id="@+id/ly_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_50dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="@dimen/margin_size_10dp"
            android:id="@+id/tv_tab01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:drawablePadding="@dimen/margin_size_4dp"
            android:layout_weight="1"
            android:textSize="@dimen/font_size_10sp"
            android:clickable="true"
            android:onClick="changeFragment"
            android:drawableTop="@drawable/ic_home_selector"
            android:text="首页"
            android:textColor="@color/tab_main"
            />

        <TextView
            android:layout_marginTop="@dimen/margin_size_10dp"
            android:id="@+id/tv_tab02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/font_size_10sp"
            android:drawablePadding="@dimen/margin_size_4dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="changeFragment"
            android:textColor="@color/tab_main"
            android:drawableTop="@drawable/ic_fabu_selector"
            android:text="发布" />

        <FrameLayout
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_size_10dp"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_tab03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_10sp"
                android:onClick="changeFragment"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/margin_size_4dp"
                android:clickable="true"
                android:drawableTop="@drawable/ic_meg_selector"
                android:textColor="@color/tab_main"
                android:text="消息" />
            <com.i51gfj.www.view.widget.DragPointView
                android:id="@+id/seal_num"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginRight="25dp"
                android:visibility="invisible"
                android:text="3"
                />
        </FrameLayout>

        <TextView
            android:layout_marginTop="@dimen/margin_size_10dp"
            android:id="@+id/tv_tab04"
            android:layout_weight="1"
            android:onClick="changeFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/font_size_10sp"
            android:drawablePadding="@dimen/margin_size_4dp"
            android:clickable="true"
            android:drawableTop="@drawable/ic_mine_selector"
            android:textColor="@color/tab_main"
            android:text="我的" />

    </LinearLayout>

</LinearLayout>