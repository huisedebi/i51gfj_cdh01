<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/top_bar"></include>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/line2"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="@dimen/margin_size_130dp"
            android:layout_height="@dimen/margin_size_130dp"
            android:src="@drawable/yu_e"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_size_80dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额"
            android:textSize="@dimen/font_size_17sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_size_10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0"
            android:textSize="@dimen/font_size_20sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_size_10dp"
            />
        <Button
            android:id="@+id/btn_cz"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_45dp"
            android:layout_marginLeft="@dimen/margin_size_25dp"
            android:layout_marginRight="@dimen/margin_size_25dp"
            android:layout_marginTop="@dimen/margin_size_70dp"
            android:background="@drawable/corner_white_5dp_red"
            android:text="充值"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/btn_tx"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_45dp"
            android:layout_marginLeft="@dimen/margin_size_25dp"
            android:layout_marginRight="@dimen/margin_size_25dp"
            android:layout_marginTop="@dimen/margin_size_15dp"
            android:background="@drawable/corner_mine_5dp_gred"
            android:text="提现"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>