<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:background="@color/line2"></View>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="2015.03.05"
       android:layout_alignParentRight="true"
       android:layout_marginTop="@dimen/margin_size_15dp"
       android:layout_marginRight="@dimen/margin_size_8dp"
       android:id="@+id/tv_time" />
    <ImageView
        android:id="@+id/img_person"
        android:layout_width="@dimen/margin_size_60dp"
        android:layout_height="@dimen/margin_size_60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/margin_size_15dp"
        android:layout_marginStart="@dimen/margin_size_15dp"
        android:src="@drawable/person_img"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="浙江放心苹果维修"
        android:textSize="@dimen/font_size_18sp"
        android:layout_below="@+id/tv_time"
        android:layout_toRightOf ="@id/img_person"
        android:layout_marginLeft="@dimen/margin_size_5dp"
        android:layout_marginTop="@dimen/margin_size_8dp"
        />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="浙江放心苹果维修"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf ="@id/img_person"
        android:layout_marginLeft="@dimen/margin_size_5dp"
        android:layout_marginTop="@dimen/margin_size_8dp"
        android:layout_marginBottom="@dimen/margin_size_15dp"
        />
</RelativeLayout>