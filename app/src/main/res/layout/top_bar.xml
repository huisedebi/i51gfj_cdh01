<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_bar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_49dp"
        android:weightSum="1">

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/left_tv"
            android:layout_width="@dimen/margin_size_110dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_size_8dp"
            android:drawableLeft="@drawable/index_back"
            android:drawablePadding="@dimen/margin_size_6dp"
            tools:text="左边"
            />
        <TextView
            android:id="@+id/left_tv2"
            android:layout_width="@dimen/margin_size_110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_size_8dp"
            android:drawablePadding="@dimen/margin_size_6dp"
            tools:text="左边"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="@dimen/margin_size_110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:text="中间"
            />

        <TextView
            android:id="@+id/right_tv"
            android:layout_width="@dimen/margin_size_110dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/title_tv"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/margin_size_18dp"
            android:textColor="@color/black"
            tools:text="右边"
            android:layout_weight="0.53" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1dp"
        android:background="@color/line2"></View>
</LinearLayout>
