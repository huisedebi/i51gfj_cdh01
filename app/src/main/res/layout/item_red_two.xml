<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/line2"
    android:orientation="vertical"
    android:id="@+id/layout_lin"
    >
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_size_4dp"
        android:background="@color/line2">

    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_80dp"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/margin_size_6dp"
        android:layout_marginRight="@dimen/margin_size_6dp"
        >
        <ImageView
            android:id="@+id/item_red_two_img"
            android:layout_width="@dimen/margin_size_70dp"
            android:layout_height="@dimen/margin_size_100dp"
            android:paddingTop="@dimen/margin_size_20dp"
            android:paddingBottom="@dimen/margin_size_20dp"
            tools:src="@drawable/test"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/item_red_two_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="翔安新晃是假证红包"
            android:layout_alignTop="@+id/item_red_two_img"
            android:layout_toRightOf="@+id/item_red_two_img"
            android:layout_marginLeft="@dimen/margin_size_10dp"
            android:layout_marginTop="@dimen/margin_size_8dp"
            android:textSize="@dimen/font_size_13sp"
            android:maxLines="1"
            />
        <LinearLayout
            android:paddingLeft="@dimen/margin_size_8dp"
            android:layout_width="@dimen/margin_size_300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/item_red_two_img"
            android:layout_centerVertical="true"
            >
            <ImageView

                android:layout_width="@dimen/margin_size_12dp"
                android:layout_height="@dimen/margin_size_12dp"
                android:background="@drawable/index_heart"
                android:scaleType="centerInside"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注度"
                android:layout_marginLeft="@dimen/margin_size_4dp"
                android:textSize="@dimen/font_size_13sp"
                />
            <TextView
                android:id="@+id/item_shop_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28"
                android:layout_marginLeft="@dimen/margin_size_4dp"
                android:layout_weight="1"
                android:textColor="@color/index_main"
                android:textSize="@dimen/font_size_13sp"
                />
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/margin_size_12dp"
                android:layout_height="@dimen/margin_size_12dp"
                android:background="@drawable/index_good"
                android:layout_marginLeft="@dimen/margin_size_4dp"
                android:scaleType="centerInside"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐度"
                android:layout_marginLeft="@dimen/margin_size_4dp"
                android:textSize="@dimen/font_size_13sp"
                />
            />
            <ImageView
                android:id="@+id/img_star"
                android:layout_gravity="center_vertical"
                android:layout_width="55dp"
                android:layout_height="12dp"
                android:background="@drawable/star5"
                android:scaleType="centerInside"
                android:layout_marginLeft="@dimen/margin_size_4dp"
                />
            <Button
                android:id="@+id/red_button"
                android:layout_marginLeft="@dimen/margin_size_10dp"
                android:layout_width="@dimen/margin_size_60dp"
                android:layout_height="@dimen/margin_size_30dp"
                android:background="@drawable/corner_white_5dp_red"
                android:text="领红包"
                android:textSize="@dimen/font_size_13sp"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="@dimen/margin_size_8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/item_red_two_img"
           android:layout_alignBottom="@+id/item_red_two_img"
            >
            <ImageView
                android:layout_width="@dimen/margin_size_8dp"
                android:layout_height="@dimen/margin_size_12dp"
                android:background="@drawable/index_juli"
                android:layout_marginLeft="@dimen/margin_size_4dp"
                android:scaleType="centerInside"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_size_4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离"
                android:layout_marginLeft="@dimen/margin_size_4dp"
                android:textSize="@dimen/font_size_13sp"
                android:layout_marginBottom="@dimen/margin_size_8dp"
                />
            <TextView
                android:id="@+id/item_shop_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20.71公里"
                android:textColor="@color/index_main"
                android:layout_marginLeft="@dimen/margin_size_4dp"
                android:textSize="@dimen/font_size_13sp"
                android:layout_marginBottom="@dimen/margin_size_8dp"
                />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>