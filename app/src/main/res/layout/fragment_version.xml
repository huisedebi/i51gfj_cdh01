<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/bar_title"
        layout="@layout/top_bar" />

    <ImageView
        android:layout_width="@dimen/margin_size_150dp"
        android:layout_height="@dimen/margin_size_150dp"
        android:layout_marginTop="@dimen/margin_size_30dp"
        android:src="@mipmap/ic_logo" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_15dp"
        android:textSize="@dimen/font_size_16sp"
        tools:text="是否斯蒂芬斯蒂芬森的" />

</LinearLayout>