<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/margin_size_10dp"
        android:text="个人中心"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_10dp"
        android:background="@color/line2"></View>

    <com.i51gfj.www.view.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_1dp"
                android:background="@color/line2"></View>

            <LinearLayout
                android:id="@+id/mine_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_80dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/person_img"
                    android:layout_width="@dimen/margin_size_60dp"
                    android:layout_height="@dimen/margin_size_60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_size_15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/person_img"
                    />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_size_15dp"
                    android:layout_weight="1"
                    android:text="无"
                    android:textSize="@dimen/font_size_17sp" />

                <ImageView
                    android:layout_width="@dimen/margin_size_12dp"
                    android:layout_height="@dimen/margin_size_12dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin_size_8dp"
                    android:src="@drawable/right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_12dp"
                android:background="@color/line2"></View>

            <TextView
                android:id="@+id/store_info"
                style="@style/mine_tv"
                android:drawableLeft="@drawable/a1"
                android:text="商户信息" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_12dp"
                android:background="@color/line2"></View>

            <RelativeLayout
                android:id="@+id/yu_e_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_55dp"
                android:visibility="@null">

                <TextView
                    android:id="@+id/mine_yu_e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_size_15dp"
                    android:drawableLeft="@drawable/a2"
                    android:drawablePadding="@dimen/margin_size_8dp"
                    android:text="钱包" />

                <TextView
                    android:id="@+id/yu_e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_size_15dp"
                    tools:text="40元" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_12dp"
                android:background="@color/line2"></View>

            <TextView
                android:id="@+id/fa_red"
                style="@style/mine_tv"
                android:drawableLeft="@drawable/a3"
                android:text="推广红包 "
                android:visibility="@null" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_12dp"
                android:background="@color/line2"></View>

            <TextView
                android:id="@+id/fa_record"
                style="@style/mine_tv"
                android:drawableLeft="@drawable/a4"
                android:text="发放红包记录 "
                android:visibility="@null" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_1dp"
                android:background="@color/line2"></View>

            <TextView
                android:id="@+id/red_record"
                style="@style/mine_tv"
                android:drawableLeft="@drawable/a5"
                android:text="领取红包记录" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_12dp"
                android:background="@color/line2"></View>

            <TextView
                android:id="@+id/my_count"
                style="@style/mine_tv"
                android:drawableLeft="@drawable/a6"
                android:text="我的账单 "
                android:visibility="@null" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_1dp"
                android:background="@color/line2"></View>

            <TextView
                android:id="@+id/count_detail"
                style="@style/mine_tv"
                android:drawableLeft="@drawable/a7"
                android:text="收支明细 "
                android:visibility="@null" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_12dp"
                android:background="@color/line2"></View>

            <TextView
                android:id="@+id/open_hy"
                style="@style/mine_tv"
                android:drawableLeft="@drawable/a8"
                android:text="开通年费会员 " />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_1dp"
                android:background="@color/line2"></View>

            <TextView
                android:id="@+id/modify_password"
                style="@style/mine_tv"
                android:drawableLeft="@drawable/a9"
                android:text="修改密码 " />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_1dp"
                android:background="@color/line2"></View>

            <RelativeLayout
                android:id="@+id/layout_openstate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/stroe_type"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_size_55dp"
                    android:layout_marginLeft="@dimen/margin_size_15dp"
                    android:drawableLeft="@drawable/a10"
                    android:drawablePadding="@dimen/margin_size_8dp"
                    android:gravity="center_vertical"
                    android:text="营业状态 " />

                <TextView
                    android:id="@+id/btn_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_size_8dp"
                    android:layout_toLeftOf="@+id/switchview"
                    android:text="开" />

                <com.i51gfj.www.view.SwitchView_tip
                    android:id="@+id/switchview"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_size_15dp"
                    android:layout_marginTop="@dimen/margin_size_15dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_1dp"
                android:background="@color/line2"></View>

            <TextView
                android:id="@+id/my_gz"
                style="@style/mine_tv"
                android:drawableLeft="@drawable/a11"
                android:text="我的关注 " />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_1dp"
                android:background="@color/line2"></View>

            <TextView
                android:id="@+id/my_dp"
                style="@style/mine_tv"
                android:drawableLeft="@drawable/a12"
                android:text="我的点评 " />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_1dp"
                android:background="@color/line2"></View>

            <RelativeLayout
                android:id="@+id/delete_hc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_55dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_size_15dp"
                    android:drawableLeft="@drawable/a13"
                    android:drawablePadding="@dimen/margin_size_8dp"
                    android:text="删除缓存" />

                <TextView
                    android:id="@+id/hc_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_size_15dp"
                    android:text="当前缓存352M" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_1dp"
                android:background="@color/line2"></View>

            <TextView
                android:id="@+id/my_fkyj"
                style="@style/mine_tv"
                android:drawableLeft="@drawable/a14"
                android:text="反馈意见 " />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_1dp"
                android:background="@color/line2"></View>

            <TextView
                android:id="@+id/my_version"
                style="@style/mine_tv"
                android:drawableLeft="@drawable/version"
                android:text="当前版本 " />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_120dp"
                android:background="@color/line2">

                <Button
                    android:id="@+id/back_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_size_45dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_size_15dp"
                    android:layout_marginRight="@dimen/margin_size_15dp"
                    android:background="@drawable/corner_white_5dp_red"
                    android:text="退出"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
    </com.i51gfj.www.view.BounceScrollView>
</LinearLayout>